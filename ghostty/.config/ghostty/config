theme = catppuccin-macchiato
# font-family = Meslo LGS Nerd Font Mono
# font-family = CaskaydiaMono Nerd Font
font-family = CaskaydiaCove Nerd Font
font-size = 14

background-opacity = 0.95
gtk-titlebar = false

mouse-hide-while-typing = true
window-save-state = always

# keybindings
keybind = alt+a>r=reload_config
keybind = alt+a>x=close_surface

# tabs 
keybind = alt+a>n=new_tab
keybind = alt+a>comma=move_tab:-1
keybind = alt+a>period=move_tab:1

# quick tab switch
keybind = alt+a>1=goto_tab:1
keybind = alt+a>2=goto_tab:2
keybind = alt+a>3=goto_tab:3
keybind = alt+a>4=goto_tab:4
keybind = alt+a>5=goto_tab:5
keybind = alt+a>6=goto_tab:6
keybind = alt+a>7=goto_tab:7
keybind = alt+a>8=goto_tab:8
keybind = alt+a>9=goto_tab:9

# split
keybind = alt+a>shift+l=new_split:right
keybind = alt+a>shift+j=new_split:down
keybind = alt+a>shift+h=new_split:left
keybind = alt+a>shift+k=new_split:up

keybind = alt+a>j=goto_split:bottom
keybind = alt+a>k=goto_split:top
keybind = alt+a>h=goto_split:left
keybind = alt+a>l=goto_split:right

keybind = alt+a>z=toggle_split_zoom

keybind = alt+a>e=equalize_splits
